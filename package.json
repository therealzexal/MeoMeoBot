{
  "name": "meomeobot",
  "version": "3.0.7",
  "description": "Un bot qui miaule",
  "main": "main.js",
  "repository": "github:therealzexal/MeoMeoBot",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "castv2-client": "^1.2.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "fluent-ffmpeg": "^2.1.3",
    "ip": "^2.0.1",
    "mdns-js": "^1.0.3",
    "dotenv": "^16.4.5",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "38.2.2",
    "electron-builder": "^24.13.3"
  },
  "author": "MeoMeoBot",
  "license": "MIT",
  "build": {
    "appId": "com.meomeobot.app",
    "productName": "MeoMeoBot",
    "publish": {
      "provider": "github"
    },
    "files": [
      "main.js",
      "bot.js",
      "preload.js",
      "index.html",
      "style.css",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "uninstallDisplayName": "${productName}"
    }
  }
}