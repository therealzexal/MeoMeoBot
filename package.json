{
  "name": "meomeobot",
  "version": "3.7.23",
  "main": "main.js",
  "repository": "github:Zexaaaal/MeoMeoBot",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "bonjour-service": "^1.2.1",
    "castv2-client": "^1.2.0",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "fluent-ffmpeg": "^2.1.3",
    "html2canvas": "^1.4.1",
    "socket.io-client": "^4.8.1",
    "tmi.js": "^1.8.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "38.2.2",
    "electron-builder": "^24.13.3"
  },
  "author": "MeoMeoBot",
  "license": "MIT",
  "build": {
    "appId": "com.meomeobot.app",
    "productName": "MeoMeoBot",
    "publish": {
      "provider": "github",
      "owner": "Zexaaaal",
      "repo": "MeoMeoBot",
      "releaseType": "release",
      "vPrefixedTagName": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "uninstallDisplayName": "${productName}"
    },
    "files": [
      "main.js",
      "bot.js",
      "index.html",
      "style.css",
      "package.json",
      "assets/**/*",
      "config/**/*",
      "renderer/**/*",
      "server/**/*",
      "widgets/**/*",
      "css/**/*",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "node_modules/@ffprobe-installer/win32-x64/ffprobe.exe",
        "to": "ffprobe.exe"
      }
    ]
  }
}